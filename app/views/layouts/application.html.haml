!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / Meta, title, CSS, favicons, etc.
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title AVASTER
    = csrf_meta_tags

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = yield(:head)
  %body.nav-md
    .container.body
      .main_container
        .col-md-3.left_col
          .left_col.scroll-view
            .navbar.nav_title{:style => "border: 0;"}
              = link_to root_path, class: 'site_title' do
                AVASTER
            .clearfix
            %br/
            / sidebar menu
            = render 'layouts/navigation'
        .top_nav
          .nav_menu
            %nav
              .nav.toggle
                %a#menu_toggle
                  %i.fa.fa-bars
              %ul.nav.navbar-nav.navbar-right
                %li
                  %a.user-profile.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "javascript:;"}
                    = current_user.full_name
                    %span.fa.fa-angle-down
                  %ul.dropdown-menu.dropdown-usermenu.pull-right
                    %li
                      = link_to 'Profile', edit_user_registration_path
                    %li
                      = link_to destroy_user_session_path, :method=>'delete' do
                        %i.fa.fa-sign-out.pull-right
                        Log Out
        .right_col{:role => "main"}
          %div
            .row
              .col-md-12.col-sm-12.col-xs-12
                = render 'layouts/messages'
                = yield
        %footer
          .pull-right
            AVASTER
          .clearfix
    = javascript_include_tag "theme"